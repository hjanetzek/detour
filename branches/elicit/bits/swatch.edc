
part {
	name: "swatch.bg";
	type: IMAGE;

	description {
		state: "default" 0.0;

	r1 { to: "body.rect"; relative, 0.0 0.0; offset: 0 0; }
	r2 { to: "body.rect"; relative, 0.5 1.0; offset: -48 -1; }

		image {
		       normal: "scrollframe_bg.png";
		       border: 7 7 7 7;
		}

		fill {
			smooth: 0;
		}
	}
}

part {
	name: "swatch";
	type: SWALLOW;

	description {
		state: "default" 0.0;

	r1 { to: "swatch.overlay"; offset: 1 2; }
	r2 { to: "swatch.overlay"; offset: -2 -3; }
	}
}

