part {	 
	name: "e.text.title";
	type: TEXT;
	effect: SHADOW;
	mouse_events: 0;
	clip_to: "text.area";

	description {
		state: "default" 0.0;
		align: 0.5 0.0;
		color: 7 7 7 255;
		color3: 0 0 0 32;

		rel1 { 
			to: "text.area"; 
			relative: 0.0 0.0; 
			offset: 0 0; 
		}

		rel2 { 
			to: "text.area"; 
			relative: 1.0 0.0; 
			offset: 0 -10; 
		}

		text {
			text: "Welcome to Enlightenment";
			font: "Sans:style=Bold,Edje-Vera-Bold";
			size: 12;
			min: 1 1;
			align: 0.5 0.5;
			#if ENABLE_TEXT_CLASSES == 0
				text_class: "";
			#else
			#if ENABLE_TEXT_CLASSES == 1
				text_class: "init_title";
			#endif
			#endif
		}
	}
}

