}

part {
	name: "splash.clip";
	type: RECT;
	mouse_events: 0;

	description {
		state: "default" 0.0;
		min: 313 97;
		max: 313 97;
		fixed: 1 1;
		visible: 0;

		rel1 { 
			to: "background_image"; 
			relative: 0.5 0.5; 
			offset: 1 0; 
		}

		rel2 { 
			to: "background_image"; 
			relative: 0.5 0.5; 
			offset: 0 -2; 
		}
	}

	description {
		state: "visible" 0.0;
		inherit: "default" 0.0;
		visible: 1;
	}
}

