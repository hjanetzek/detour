style {
	name: "textblock_style";
	base: "font=DejaVuSans font_size=11 align=left color=#070707";
      
	tag:  "br" "\n";
	tag:  "hilight" "+ font=DejaVuSans-Bold color=#3c3c3c";
	tag:  "b" "+ font=DejaVuSans-Bold";
	tag:  "/title" "- \n \n";
}

style {
	name: "about_detour";
	base: "font=DejaVuSans font_size=11 color=#070707 wrap=word";

	tag: "-" "+ font_size=10";
	tag: "bold" "+ font=DejaVuSans-Bold";
	tag: "mono" "+ font=DejaVuSans-Mono";
	tag: "center" "+ align=middle";
	tag: "subliminal" "+ color=#07070710";
	tag: "underline" "+ underline=on underline_color=#3c3c3c60 font_size=10 color=#3c3c3c60";
	//tag: "lighter" "+ color=#90d74f";
	tag: "lighter" "+ color=#c4c4b6";
}

style {
	name: "tlist_style";
	base: "font=DejaVuSans font_size=11 align=left color=#3c3c3c wrap=word";

	tag:  "br" "\n";
	tag:  "hilight" "+ font=DejaVuSans-Bold";
	tag:  "title" "+ font_size=12 font=DejaVuSans-Bold style=shadow color=#3c3c3c shadow_color=#aaa8a9";
	tag:  "/title" "- \n \n";
}

