part {
	name: "base";
	mouse_events: 0;

	description {
		state: "default" 0.0;

	r1 { to_y: "base2"; relative: 0.0 1.0; offset: 1 0; }
	r2 { relative: 1.0 1.0; offset: -2 -2; }

	image {
		normal: "menu_bg.png";
		border: 2 2 2 2;
	}

	fill {
		smooth: 0;
	}
    }
}

part {
	name: "base2";
	mouse_events: 0;
	type: RECT;

	description {
		state: "default" 0.0;
		max: 99999 0;
		align: 0.5 0.0;

	r1 { relative: 0.0 0.0; offset: 1 1; }
	r2 { relative: 1.0 1.0; offset: -2 -2; }

	color: 0 0 0 0;
	}
}

part {
	name:"title_bg";
	type: RECT;
	
	description {
		state: "default" 0.0;

	r1 { to: "title_overlay"; }
	r2 { to: "title_overlay"; }

	color: 0 0 0 0;
	}
}

part {
	name: "text";
	type: TEXT;
	effect: SHADOW;
	mouse_events: 0;

	description {
		state: "default" 0.0;
		align: 0.5 0.0;
		fixed: 0 1;

	r1 { relative: 0.0 0.0; offset: 26 24; }
	r2 { relative: 1.0 0.0; offset: -26 24; }

	color: 60 60 60 255;
	color3: 170 168 169 128;

	text {
		text: "Title goes here";
		font: "Edje-Vera-Bold";
		size: 12;
		min:  1 1;
		align: 0.5 0.5;
		text_class: "module_large_s";	       
	}
    }
}

part {
	 name: "title_overlay";
	 mouse_events: 0;
	type: RECT;

	 description {
	    state: "default" 0.0;
	    align: 0.5 1.0;

	r1 { to_y: "text"; relative: 0.0 0.0; offset: 16 -7; }
	r2 { to_y: "text";  relative: 1.0 1.0; offset: -17 6; }

	color: 0 0 0 0;
	}
}

part {
	name: "background";
	mouse_events: 0;
	type: RECT;

	description {
		state: "default" 0.0;

	r1 { to: "overlay"; }
	r2 { to: "overlay"; }

	color: 0 0 0 0;
	}
}

part {
	name: "items_clip";
	type: RECT;
	mouse_events: 0;

	description {
		state: "default" 0.0;
	
	r1 { to: "background"; offset: 4 4; }
	r2 { to: "background"; offset: -5 -5; }
	
	color: 255 255 255 255;
	}
}

part {
	name: "pager";
	type: SWALLOW;
	clip_to: "items_clip";

	description {
		state: "default" 0.0;

	r1 { to: "overlay"; offset: 4 4; }
	r2 { to: "overlay"; offset: -5 -5; }

	color: 0 0 0 0;
	}
}

part {
	name: "overlay";
	mouse_events: 0;
	type: RECT;

	description {
		state:  "default" 0.0;

	r1 { to_y: "title_overlay"; relative: 0.0 1.0; offset: 16 6; }
	r2 { relative: 1.0 1.0; offset: -17 -17; }

	color: 0 0 0 0;
	}
}

