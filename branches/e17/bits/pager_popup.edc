	name: "separator";
	mouse_events: 0;

	description {
		state: "default" 0.0;
		max: 608 12;

	r1 { to: "pager"; relative: 0.0 1.0; offset: 0 0; }
	r2 { to: "pager"; relative: 1.0 1.0; offset: 0 10; }

