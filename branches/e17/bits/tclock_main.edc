
part {
	name: "base";
	type: RECT;
	mouse_events: 1;
	description {
		state: "default" 0.0;
		color: 255 255 255 255;
	}
}

part {
	name: "bg";
	mouse_events: 0;

	description {
		state: "default" 0.0;

	r1 { offset: 1 2; }
