	name: "tclock_time";
	type: TEXT;
	clip_to: "base";
	mouse_events: 1;

	description {
		state: "default" 0.0;
		visible: 0;
		align: 0.5 0.5;

	r1 { to: "bg"; relative: 0.0 0.0; offset: 0 6; }
	r2 { to: "bg"; relative: 1.0 0.5; offset: 0 -0; }

	color: 7 7 7 255;

	text {
		text: "";
		font: "Edje-Vera-Mono-Bold";
		size: 10;
		min: 1 1;
		align: 0.5 0.5;
		text_class: "module_large";			  
	}
}

	description {
		state: "hidden" 0.0;
		inherit: "default" 0.0;
		visible: 0;
	}

	description {
		state: "visible" 0.0;
		inherit: "default" 0.0;
		visible: 1;
	}		  
}

