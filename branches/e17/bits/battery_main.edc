part {
	name: "e.text.reading";
	type: TEXT;
	effect: NONE;
	clip_to: "text_fade_clip";

	description {
		state: "default" 0.0;
		color: 7 7 7 255;
		align: 0.5 0.5;

		rel1 { 
			to: "text_clip"; 
			relative: 0.5 0.5; 
			offset: 0 0; 
		}

		rel2 { 
			to: "text_clip"; 
			relative: 0.5 0.5; 
			offset: -1 -1; 
		}

		text {
			text: "100%";
			font: "Sans:style=Bold,DejaVuSans-Bold";
			size: 10;
			min: 1 1;
			align: 0.5 0.5;
			#if ENABLE_TEXT_CLASS == 0
				text_class: "";
			#else
			#if ENABLE_TEXT_CLASS == 1
				text_class: "module_small";
			#endif
			#endif  
		}
	}
}

