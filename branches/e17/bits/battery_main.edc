
part {
	name: "battery";
	clip_to: "pulse_clip";

	description {
		state: "default" 0.0;
		max: 85 85;
		aspect: 1.0 1.0;
	    	aspect_preference: BOTH;
		align: 0.5 0.5;

		rel1 { 
			relative: 0.0 0.0; 
			offset: 0 0; 
		} 

		rel2 { 
			relative: 1.0 1.0; 
			offset: -1 -1; 
		}

		image {
			normal: "battery-0.png";
		}
	}

# ifdef DESCR
#  undef DESCR
# endif
#define DESCR(STATE,IMG) \
	description { \
		state: "default" STATE; \
		inherit: "default" 0.0; \
\
		image { \
			normal: IMG; \
		} \
	}
	DESCR(0.2, "battery-20.png")
	DESCR(0.4, "battery-40.png")
	DESCR(0.6, "battery-60.png")
	DESCR(0.8, "battery-80.png")
	DESCR(1.0, "battery-100.png")
}

