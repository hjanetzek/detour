
# ifdef PROG
#  undef PROG
# endif
#define PROG(NAME,SIGNAL,STATE) \
program { \
	name: NAME; \
	signal: SIGNAL; \
	source: "e"; \
	action: STATE_SET STATE 0.0; \
	target: "base"; \
	target: "e.text.label"; \
} 

group {
	name: "e/fileman/default/window/main";

	parts {
		#include "fileman_window_main.edc"
	}
}

group {
	name: "e/fileman/default/list/fixed";
	
	parts {
		#include "fileman_list_fixed.edc"
	}

	programs {
		PROG("active", "e,state,selected", "active")
		PROG("deactivate", "e,state,unselected", "default")
		FILEMAN_LIST_PROGS()
	}
}

group {
	name: "e/fileman/default/list_odd/fixed";

	parts {
		#include "fileman_list_odd.edc"
	}

	programs {
		PROG("active", "e,state,selected", "active")
		PROG("deactivate", "e,state,unselected", "default")
		FILEMAN_LIST_PROGS()
	}
}

