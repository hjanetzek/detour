part {
	name: "e.dragable.hbar.clip";
	clip_to: "sb_hbar";
	mouse_events: 0;

	description {
		state: "default" 0.0;
		min: 36 13;
		max: 9999 13;
		fixed: 1 1;
		color: 255 255 255 255;

	rel1 { to: "sb_hbar_base"; relative: 0.0 0.0; offset: 0 0;}
	rel2 { to: "sb_hbar_base"; relative: 1.0 1.0; offset: 0 0; }
	}

	description {
		state: "clicked" 0.0;
		inherit: "default" 0.0;
		color: 215 215 215 255;
	}
}

part {
	name: "e.dragable.hbar";
	clip_to: "sb_hbar";
	clip_to: "e.dragable.hbar.clip";
	mouse_events: 1;

	dragable {
		x: 1 1 0;
		y: 0 0 0;
		confine: "sb_hbar_base";
	}

	description {
		state: "default" 0.0;
		min: 36 13;
		max: 72 13;
		fixed: 1 1;
		color: 255 255 255 255;

	rel1 { to: "sb_hbar_base"; relative: 0.5 0.5; }
	rel2 { to: "sb_hbar_base"; relative: 0.5 0.5; }

		image {
			normal: "sf_barh1.png";
			border: 7 7 7 7;
		}
	}

	description {
		state: "clicked" 0.0;
		inherit: "default" 0.0;
		color: 215 215 215 255;
	}
}

