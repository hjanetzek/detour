#define BORDER(NAME,INDEX1,MIN,MAX,REL1,OFF1,REL2,OFF2,IMG1,INDEX2,IMG2) \
part { \
	name: NAME; \
	mouse_events: 0; \
	description { \
		state: "default" INDEX1; \
		min: MIN; \
		max: MAX; \
	r1 { relative: REL1; offset: OFF1; } \
	r2 { relative: REL2; offset: OFF2; } \
	image { \
		normal: IMG1; \
	} \
} \
	description { \
		state: "default" INDEX2; \
		inherit: "default" 0.0; \
	image { \
		normal: IMG2; \
	} \
    } \
}

