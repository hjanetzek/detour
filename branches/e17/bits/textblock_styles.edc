	#endif

	tag:  "br" "\n";
}

style {
	name: "sys_style";
	#if ENABLE_TEXT_CLASSES == 0
	base: "font=DejaVuSans-Bold font_size=14 align=center color=#070707 style=shadow shadow_color=#aaa8a9 wrap=word";
	#else
	#if ENABLE_TEXT_CLASSES == 1
	base: "font=DejaVuSans-Bold font_size=14 align=center color=#070707 style=shadow shadow_color=#aaa8a9 wrap=word text_class=tb_large";
	#endif
	#endif

	tag: "br" "\n";

	#if ENABLE_TEXT_CLASSES == 0
		tag: "hilight" "+ font=DejaVuSans-Bold style=glow color=#fff glow2_color=#fe87 glow_color=#fa14";
	#else
	#if ENABLE_TEXT_CLASSES == 1
		tag: "hilight" "+ font=DejaVuSans-Bold style=glow color=#fff glow2_color=#fe87 glow_color=#fa14 text_class=tb_large_light";
	#endif
	#endif
}

style {
	name: "icon_normal";
	base: "font=DejaVuSans-Bold font_size=10 align=center color=#070707 wrap=word";
	tag:  "br" "\n"; 
}

style {
	name: "icon_selected";
	base: "font=DejaVuSans-Bold font_size=10 align=center color=#fff wrap=word";
	tag:  "br" "\n"; 
}

style {
	name: "textblock_style";
	base: "font=DejaVuSans font_size=11 align=left color=#070707";
      
	tag:  "br" "\n";
	tag:  "hilight" "+ font=DejaVuSans-Bold color=#3c3c3c";
	tag:  "b" "+ font=DejaVuSans-Bold";
	tag:  "/title" "- \n \n";
}

style {
	name: "notification_style";
	base: "font=Edje-Vera font_size=11 align=left color=#3c3c3c wrap=word text_class=module_normal";
	tag: "subject"  "+ text_class=module_large font_size=16"; 
	tag: "/subject" "- text_class=module_large font_size=16"; 
	tag: "body"  "+ text_class=module_normal font_size=13"; 
	tag: "/body" "- text_class=module_normal"; 
	tag: "br" "\n";
}

