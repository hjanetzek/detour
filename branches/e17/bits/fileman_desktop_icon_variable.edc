		state: "default" 0.0;
		color: 255 255 255 0;
	}

	description {
		state: "active" 0.0;
		color: 255 255 255 255;
	}
}

part {      
	name: "filename_overlay";
	type: IMAGE;
	mouse_events: 0;
	clip_to: "filename_overlay_clip";

	description {
		state: "default" 0.0;
		max: 9999 19;
		align: 0.5 0.5;	

		rel1 {
			to: "e.text.label";
			relative: 0.0 0.0; 
			offset: -4 0; 
		}

		rel2 {
			to: "e.text.label";
			relative: 1.0 1.0; 
			offset: 0 2; 
		}

		image {
			normal: "menu_select.png";
			border: 8 8 8 8;
		}       
	}
}

