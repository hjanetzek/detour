part {
	name: "e.text.label";
	type: TEXT;
	effect: SOFT_SHADOW;
	mouse_events: 0;

	description {
		state: "default" 0.0;
		align: 0.5 1.0;
		fixed: 0 1;
		color: 255 255 255 255;
		color3: 7 7 7 64;

		rel1 { 
			relative: 0.0 1.0; 
			offset: 8 -9; 
		}

		rel2 { 
			relative: 1.0 1.0; 
			offset: -9 -9; 
		}

		text {
			text: "No Title";
			size: 11;
			//font: "Sans:style=Bold,DejaVuSans-Bold";
			font: "DejaVuSans";
			#if TRUNCATE_DESKTOP_ICON_FILENAME == 0
				min: 1 1;
				elipsis: 0.0;
			#else
			#if TRUNCATE_DESKTOP_ICON_FILENAME == 1
				min: 0 1;
				elipsis: 1.0;
			#endif
			#endif
			align: 0.5 1.0; 
			#if ENABLE_TEXT_CLASS == 0
				text_class: "";
			#else
			#if ENABLE_TEXT_CLASS == 1
				text_class: "desktop_fileman_icon";
			#endif
			#endif	
		}
	}

	description {
		state: "active" 0.0;
		inherit: "default" 0.0;
		//color: 255 255 255 255;
		//color3: 0 0 0 0;
		color: 0 0 0 255;
		color3: 7 7 7 0;
	}
}	

