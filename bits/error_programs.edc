
program {
	name: "button_click";
	signal: "mouse,down,1";
	source: "button_enabled";
	action: STATE_SET "clicked" 0.0;
	transition: DECELERATE 0.75;
	target: "button_clip";
}

program {
	name: "button_unclick";
	signal: "mouse,up,1";
	source: "button_enabled";
	action: STATE_SET "default" 0.0;
	transition: DECELERATE 1.0;
	target: "button_clip";
	after: "emit.signal";
}

program {
	name:   "emit.signal";
	action: SIGNAL_EMIT "e,action,close" "";
}
